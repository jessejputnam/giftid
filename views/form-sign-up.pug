extends layout  

block content 
  if errors 
    ul 
      for error in errors 
        li!= error.msg

  if error 
    li= error 

  form.form-wrapper(method='POST' action='') 
    h2(style="text-align:center")= title
    
    div.form-control 
      label(for="username" style="margin-left:15px") Email
      input#username(type="email" name="username" required='true' placeholder='person@email.com')

    div.form-control 
      label(for="firstName" style="margin-left:15px") First Name
      input#firstName(type="text" name="firstName" required='true' placeholder='Benedict')

    div.form-control 
      label(for="lastName" style="margin-left:15px") Last Name
      input#lastName(type="text" name="lastName"  required='true' placeholder='Cumberbatch')

    div.form-control.birthdate 
      p(style="margin-left:15px") Birthday
